{
  "name": "openlaw",
  "version": "0.1.7-rc.3",
  "description": "JavaScript library for integrating the OpenLaw protocol to store, edit, and manage smart legal agreements.",
  "keywords": [
    "openlaw",
    "legal",
    "law",
    "contract",
    "agreement",
    "blockchain",
    "ethereum",
    "smart contract"
  ],
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "watch": {
    "test": {
      "patterns": [
        "js/src"
      ],
      "extensions": [
        "js",
        "scala"
      ]
    }
  },
  "scripts": {
    "flow": "flow",
    "build": "flow && webpack --progress --colors --config openlaw.webpack.config.js && webpack --mode development --config libs.webpack.config.js && webpack --config webpack.dev.js",
    "build_prod": "flow && webpack --progress --colors --config openlaw.webpack.config.js && webpack --mode production --config libs.webpack.config.js && webpack --config webpack.prod.js",
    "watch": "flow && webpack --progress --colors --config openlaw.webpack.config.js && webpack --mode development --config libs.webpack.config.js && webpack --progress --colors --watch --config webpack.dev.js",
    "lint": "eslint --c .eslintrc.json 'js/src/**/*.js' --fix",
    "format": "prettier --config .prettierrc 'js/src/**/*.js' --write",
    "watch_tests": "npm-watch",
    "prepublishOnly": "run-s build_prod use:npmReadme",
    "postpublish": "npm run use:gitReadme",
    "release": "np",
    "use:npmReadme": "mv 'README.md' 'git.README.md' && mv 'npm.README.md' 'README.md'",
    "use:gitReadme": "mv 'README.md' 'npm.README.md' && mv 'git.README.md' 'README.md'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openlawteam/openlaw-client.git"
  },
  "author": "OpenLaw Team <opensource@openlaw.io>",
  "license": "Apache-2.0",
  "bugs": "https://github.com/openlawteam/openlaw-client/issues",
  "homepage": "https://openlaw.io",
  "devDependencies": {
    "ajv": "^6.5.4",
    "axios-mock-adapter": "^1.15.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-minify": "^0.5.0",
    "babel-preset-react": "^6.24.1",
    "codacy-coverage": "^3.1.0",
    "enzyme": "^3.7.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-stylish": "^0.2.0",
    "flow-bin": "^0.83.0",
    "flow-watch": "^1.1.4",
    "jest": "^23.6.0",
    "jsdom": "12.2.0",
    "np": "^3.0.4",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.4.0",
    "prettier": "1.14.3",
    "regenerator-runtime": "^0.12.1",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-polyfill": "^6.26.0",
    "npm": "^6.4.1",
    "query-string": "^6.2.0"
  }
}
